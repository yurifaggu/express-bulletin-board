extends layout

block content
    h3 #{ad.title}
    i Author: #{ad.author}
    br
    br
    p #{ad.content}
    br
    a(href="/ads/" + ad.id + "/destroy", class="btn btn-xs btn-danger") Delete
    br
    br
    .my-3.p-3.bg-white.rounded.shadow-sm
      h6.border-bottom.border-gray.pb-2.mb-0 Comments
      each comment in ad.Comments
        .media.text-muted.pt-3
          img.mr-2.rounded(data-src='holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1' alt='32x32' style='width: 32px; height: 32px;' src='data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_1674ecd3121%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_1674ecd3121%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2211.546875%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E' data-holder-rendered='true')
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark @#{comment.author}
            |     #{comment.content}
    br
    hr
    h4 Write a comment
    form(action="/ads/" + ad.id + "/comments/create", method="post")
      #form-group
        label Author:
        input(type="text", name="author", class="input-sm form-control")
      #form-group
        label Comment:
        textarea.form-control(name='content')
      br
      #form-group
        input(type="submit", class="btn btn-sm btn-default")


